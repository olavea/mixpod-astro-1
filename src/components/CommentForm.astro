<form method="post">
  <p>
    <label for="author"> Name </label><br />
    <input
      type="text"
      id="author"
      name="author"
      placeholder="Your name"
      required
    />
  </p>
  <p>
    <label for="content"> Comment </label><br />
    <textarea
      id="content"
      name="content"
      rows="4"
      placeholder="Your comment"
      required></textarea>
  </p>

  <button type="submit"> Submit </button>
</form>

<style>
  form {
    p {
      margin: var(--space-s) 0;
    }

    button {
      font-size: var(--step-0);
    }
  }
</style>
